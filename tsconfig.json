{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./"  // 保證輸出回原資料夾（可加可不加）
  },
  "include": [
    "home/**/*.ts",
    "about/**/*.ts",
    "travel/**/*.ts",
    "contact/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
